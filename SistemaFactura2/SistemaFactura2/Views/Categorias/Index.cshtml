@model IEnumerable<SistemaFactura2.Models.Categorias>

@{
    ViewBag.Title = "Index";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDCategoria }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IDCategoria }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IDCategoria })
        </td>
    </tr>
}

</table>
